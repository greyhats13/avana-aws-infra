[
  {
    "name" : "${unit}-${env}-${code}-${feature}-php",
    "image" : "${image}:latest",
    "cpu" : ${cpu},
    "memory" : ${memory},
    "memoryReservation" : ${memory_reservation},
    "essential" : true,
    "mountPoints"  : [],
    "volumesFrom"  : [],
    "portMappings" : [
      {
        "containerPort" : ${port},
        "hostPort" : ${port},
        "protocol"  : "tcp"
      }
    ],
    "logConfiguration": {
      "logDriver": "awslogs",
      "secretOptions": null,
      "options": {
        "awslogs-group": "/service/${var.code}/${var.feature}",
        "awslogs-region": "ap-southeast-2",
        "awslogs-stream-prefix": "ecs"
      }
    },
  }
]